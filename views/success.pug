html
  style
    include ../public/css/success.css
  head
    link(rel='stylesheet', type='text/css', href='css/success.css')
    link(href='https://fonts.googleapis.com/css?family=Open+Sans|Quicksand', rel='stylesheet')
  body
    .navbar
      span(style='font-size:30px;cursor:pointer;color:white', onclick='openNav()') ☰ Menu
      #mySidenav.sidenav
        a.closebtn(href='javascript:void(0)', onclick='closeNav()') ×
        a(href='/') Home
        a(href='/') 
            img.logo(src= "/logo.png", alt='GPS', width='80', height='80')

    h1
      | Your account has been successfully verified!
      br
      |     Please, proceed to a login page.
    .btn
      form(action='/members/login')
        button(type='submit') Log me in
    script.
      function openNav() {
        document.getElementById("mySidenav").style.width = "250px";
      }
      function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
      }
